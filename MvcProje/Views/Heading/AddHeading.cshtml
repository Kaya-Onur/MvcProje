@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Başlık Ekleme</h2>
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
<div class="form-group">
    <br />
    @Html.Label("Başlık Adı")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HeadingName)
    <br />
    @Html.Label("Kategori Adı")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cat, new { @class = "form-control" })

    <br />
    @Html.Label("Yazar Adı")
    @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.wrt, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Kaydet</button>
</div>
}


